<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Add Task"
             BackgroundColor="#121212"
             xmlns:local="clr-namespace:Taskick.ViewModels"
             x:Class="Flyout_Test.Views.AddGoalPage">
    <ContentPage.BindingContext>
        <local:AddGoalPageViewModel/>
    </ContentPage.BindingContext>
    
    <ContentPage.Content>
        <StackLayout Padding="20,20,20,0">

            <Label Text="Title"
                   TextColor="#b3b3b3" 
                   FontAttributes="Bold"
                   FontSize="24"
                   Padding="0,0,0,-15"/>

            <Entry x:Name="goalName"
                TextColor="#b3b3b3"
                Text="{Binding Goal.Name}"/>

            <Label Text="Date"
                   TextColor="#b3b3b3" 
                   FontAttributes="Bold"
                   FontSize="24"
                   Padding="0,0,0,-15"/>

            <DatePicker x:Name="dueDatePicker" Date="{Binding Goal.DueDate}" TextColor="#b3b3b3"/>

            <Label Text="Difficulty"
                   TextColor="#b3b3b3" 
                   FontAttributes="Bold"
                   FontSize="24"
                   Padding="0,0,0,-15"/>

            <Picker x:Name="difficultySelector" Title="" SelectedItem="{Binding Goal.Difficulty}" TitleColor="#b3b3b3" TextColor="#b3b3b3">
                <Picker.Items>
                    <x:String>Easy</x:String>
                    <x:String>Medium</x:String>
                    <x:String>Hard</x:String>
                    <x:String>Extreme</x:String>
                </Picker.Items>
            </Picker>

            <Button x:Name="AddTask" Text="{Binding AddGoalButtonText}" Padding="0,0,0,0" Clicked="AddGoalButton_Clicked"/>
            <Button x:Name="EditTask" Text="Delete" Command="{Binding DeleteCommand}" BackgroundColor="#f05454" IsVisible="{Binding IsDeleteButtonVisible}" Padding="0,0,0,0"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>